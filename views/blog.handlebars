<div class="card text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>{{comment}}</p>
    <form class="form-group new-comment-form">
      <div class="form-group">
        <label for="text">Enter your comment:</label>
        <textarea class="form-input" id="text" name="text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add a comment</button>
      </div>
    </form>
  <div class="col-md-6 comment-list">
    <h3>Current comments:</h3>
  
    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/comment/{{comment.id}}">{{comment.text}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="./js/comment.js"></script>